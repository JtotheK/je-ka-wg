<%= form_tag answers_path do %>
    <p>
      <%= label_tag :mail %><br />
      <%= email_field_tag :mail, user_signed_in? ? current_user.email : "" %>
    </p>
    <p>
      <%= label_tag :message %><br />
      <%= text_area_tag :message %>
    </p>
    <%= hidden_field_tag :type, object.class.to_s %>
    <%= hidden_field_tag :id, object.id %>

    <%= recaptcha_tags unless user_signed_in? %>

    <%= submit_tag 'send' %>
<% end %>
