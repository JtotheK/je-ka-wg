<div class="page-header">
  <h1><%= t("helpers.forgot_password") %></h1>
</div>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :class => 'text_field' %>

  <div class="form-actions">
  <%= f.submit t("helpers.request_password"), :class => 'btn btn-primary' %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>
