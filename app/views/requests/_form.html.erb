<%= form_for @request do |f| %>
    <%= render 'shared/error_messages', target: @request %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :until %><br />
    <%= f.date_select :until %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
